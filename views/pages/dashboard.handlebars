<h2>Welcome, {{username}} ðŸ’» </h2>
<form
  id='newPostForm'
  method='post'
  class='grid place-content-left pb-32 rounded w-3/4 px-8 border-2 pt-8'
>
  <h4 class='text-3xl'>New Post</h4>
  <input
    type='text'
    id='title'
    name='title'
    placeholder='title'
    class='px-2 py-2 mt-4 mb-2 rounded'
  />

  <label for='content' class='text-2xl'>Content:</label>
  <textarea
    id='content'
    name='content'
    rows='10'
    cols='50'
    class='rounded'
  ></textarea>
  <button type='submit' class='form-btn w-96 px-2 py-2 mt-2 rounded'>
    Submit
  </button>
</form>
<h2>Your Posts</h2>
{{#each userPosts.posts}}
  <div class='post-container mx-60 my-4 border-2'>
    <h2 class='px-4 py-2 text-2xl'>
      {{title}}
      <span class='text-base'>Posted by
        {{user_id}}
        on 17/13/2023</span>
    </h2>
    <div>
      <p class='mx-12 my-4 text-xl'>
        {{content}}
      </p>
    </div>
    <button
      type='submit'
      data-post-id='{{id}}'
      data-user-id='{{user_id}}'
      class='deletePostBtn'
    >Delete</button>
  </div>
{{/each}}