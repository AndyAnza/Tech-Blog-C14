{{#if loggedIn}}
  <form
    id='new-post'
    method='post'
    class='grid place-content-left pb-32 rounded w-3/4 px-8 border-2 pt-8'
  >
    <h4 class='text-3xl'>New Post</h4>
    <input
      type='text'
      id='fname'
      name='title'
      placeholder='title'
      class='px-2 py-2 mt-4 mb-2 rounded'
    />

    <label for='content' class='text-2xl'>Content:</label>
    <textarea
      id='content'
      name='content'
      rows='10'
      cols='50'
      class='rounded'
    ></textarea>
    <button type='submit' class='form-btn w-96 px-2 py-2 mt-2 rounded'>
      Submit
    </button>
  </form>
{{/if}}